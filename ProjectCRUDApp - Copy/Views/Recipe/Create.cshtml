@model ProjectAppLibrary.Models.Binding.AddRecipeBindingModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Recipe</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <!--carries out "create" action-->

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">


                <label asp-for="RecipeName" class="control-label"></label>
                <input asp-for="RecipeName" class="form-control" />
                <span asp-validation-for="RecipeName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Ingredients" class="control-label"></label>
                <input asp-for="Ingredients" class="form-control" />
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Method" class="control-label"></label>
                <input asp-for="Method" class="form-control" />
                <span asp-validation-for="Method" class="text-danger"></span>
            </div>

            <span asp-validation-for="LevelofDifficulty" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="LevelofDifficulty" class="control-label"></label>
                <select asp-for="Method" class="form-control">
                    <option value="1">Easy</option>
                    <option value="2">Intermediate</option>
                    <option value="3">Hard</option>
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Recipe">Back to All Recipes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}